<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100%;
    }

    .updown-div {
        width: 70%;
        height: 70%;
        display: flex;
        align-items: center;
        justify-content: space-evenly;
        border: 3px solid black;
        border-radius: 10px;
    }

    .loding-box {
        width: 200px;
        height: 200px;
        background: black;
        position: relative;
        /* animation: 2s updown ease-in-out;
        animation-iteration-count: infinite; */
        border-radius: 50%;
        transform: rotate(-45deg);
    }

    .loding-box::after {
        content: "";
        display: inline-block;
        position: absolute;
        height: 40px;
width: 98px;
z-index: 9;
left: 50%;
top: 50%;
transform: translate(-50%, -50%);
border-left: 15px solid white;
border-bottom: 15px solid white;
    }

    .upload-heading {
        position: relative;
        width: 70%;
        height: 100%;
        display: flex;
        align-items: center;
    }

    .upload-heading div {
        position: absolute;
        animation: 1.5s write ease-in-out;
        overflow: hidden;
    }

    .upload-heading div h2 {
        font-size: 3rem;
    }

    @keyframes updown {
        0% {
            transform: rotate(0deg);
        }

        50% {
            transform: rotate(180deg);
        }

        100% {
            transform: rotate(360deg);
        }

    }

    @keyframes write {
        0% {
            width: 0%;
        }

        100% {
            width: 100%;
        }

    }
</style>

<body>
    <div class="updown-div">
        <div class="loding-box">
        </div>
        <div class="upload-heading">
            <div>
                <h2>Loging out......</h2>
            </div>
        </div>
    </div>
</body>

